<%- include('./templates/header.ejs') %>
<body>
<%- include('./templates/nav.ejs') %>
<div class="container">
  <br>
  <h2 class="text-center">Buscar Cliente</h2>

  <form action="/newConsultCustomer" method="POST">
    <label for="searchId">Buscar por ID:</label>
    <input type="number" id="searchId" name="searchId" class="form-control"  required>
    <br>
    <button type="submit" class="btn btn-success">Buscar</button>
  </form>
  <div>

    <% if (typeof data!== "undefined" && data !== null )  { %>
      <div class="container p-3">
        <div class="table-responsive">
          <table class="table table-bordered table-striped mb-3" id="tableData">
            <thead>
            <tr class="text-center">
              <th scope="col">Id</th>
              <th scope="col">Nombre</th>
              <th scope="col">Apellido</th>
              <th scope="col">Telefono</th>
              <th scope="col">Direccion</th>
              <th scope="col">Eliminar</th>
            </tr>
            </thead>
            <tbody id="tBody">
            <tr>
              <form action="/deleteCustomer" method="POST">
                <td><%= data.id %> </td>
                <td><%= data.name %></td>
                <td><%= data.lastName %></td>
                <td><%= data.phone %></td>
                <td><%= data.address %></td>
                <td>
                  <input type="hidden" name="customerId" value="<%= data.id %>">
                  <button type="submit" class="btn btn-danger">x</button>
                </td>
              </form>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    <% } else { %>
      <br>
      <h4>Cliente No Encontrado</h4>
    <% } %>
  </div>
</div>

<%- include('./templates/Footer.ejs') %>
</body>
</html>

