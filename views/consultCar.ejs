<%- include('./templates/header.ejs') %>
<body>
<%- include('./templates/nav.ejs') %>
<div class="container">
    <br>
    <h2 class="text-center">Buscar Vehiculo</h2>

    <form action="/newConsultCar" method="POST">
        <label for="searchIdCar">Buscar por Placa: Tres letras seguido de Tres numeros</label>
        <input type="text" oninput="validateInput()"  id="searchIdCar" name="searchIdCar" class="form-control"  required>
        <br>
        <span id="warningSearchCar" class="warning" ><%= warningSearchCar %></span>
        <br>
        <button type="submit" class="btn btn-success" id="btnSearchCar" >Buscar</button>
    </form>
    <div>
        <% if (typeof data != "undefined" && data != null)  { %>
            <div class="container p-3">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mb-3" id="tableData">
                        <thead>
                        <tr class="text-center">
                            <th scope="col">Id</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Valor</th>
                            <th scope="col">Color</th>
                            <th scope="col">Modelo</th>
                            <th scope="col">Eliminar</th>
                        </tr>
                        </thead>
                        <tbody id="tBody">
                        <tr>
                            <form action="/deleteCar" method="POST">
                                <td><%= data.plate %></td>
                                <td><%= data.brand %></td>
                                <td><%= data.value %></td>
                                <td><%= data.color %></td>
                                <td><%= data.model %></td>
                                <td>
                                    <input type="hidden" name="carId" value="<%= data.plate %>">
                                    <button type="submit" class="btn btn-danger">x</button>
                                </td>
                            </form>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } else { %>
            <br>
            <h4>Vehiculo No Encontrado</h4>
        <% } %>

    </div>


</div>
<%- include('./templates/Footer.ejs') %>
</body>
</html>